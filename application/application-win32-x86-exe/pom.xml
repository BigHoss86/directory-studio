<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apache.directory.studio</groupId>
    <artifactId>application</artifactId>
    <version>2.0.0.v20120111</version>
  </parent>
  
  <artifactId>ApacheDirectoryStudio-win32-x86-exe</artifactId>
  <name>Apache Directory Studio Application Win32 x86 Exe</name>
  <packaging>pom</packaging>
  
  <properties>
    <tmp-dir>${project.build.directory}/ApacheDirectoryStudio-win32-x86-exe-tmp</tmp-dir>
    <files-dir>${tmp-dir}/files</files-dir>
    <installer-file-name>ApacheDirectoryStudio-win32-x86-${version}.exe</installer-file-name>
    <installers.makensis>makensis</installers.makensis>
  </properties>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.apache.directory.studio</groupId>
                  <artifactId>ApacheDirectoryStudio-win32-x86</artifactId>
                  <type>zip</type>
                  <version>${project.version}</version>
                  <outputDirectory>${project.build.directory}</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <configuration>
              <target>
                <unzip dest="${tmp-dir}">
                    <fileset dir="${project.build.directory}" includes="ApacheDirectoryStudio-win32-*.zip"/>
                </unzip>
                <copy file="src/main/resources/installer.nsi" todir="${tmp-dir}">
                  <filterset>
                    <filter token="version" value="${project.version}" />
                    <filter token="installer-file-name" value="${installer-file-name}" />
                  </filterset>
                </copy>
                <copy file="src/main/resources/AdvUninstLog.nsh" todir="${tmp-dir}"/>
                <copy file="src/main/resources/header_studio.bmp" todir="${tmp-dir}"/>
                <copy file="src/main/resources/studio-installer.ico" todir="${tmp-dir}"/>
                <copy file="src/main/resources/welcome_studio.bmp" todir="${tmp-dir}"/>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
              <configuration>
                <workingDirectory>${tmp-dir}</workingDirectory>
                <executable>${installers.makensis}</executable>
                <arguments>
                  <argument>installer.nsi</argument>
                </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
  
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <!-- Create the distribution file -->
          <execution>
            <phase>package</phase>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>src/main/assembly/assembly.xml</descriptor>
              </descriptors>
            </configuration>
            <goals>
              <goal>attached</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
</project>
