        name="Subschema"
        objectClass="org.apache.directory.studio.ldapbrowser.core.propertypageproviders.EntryPropertyPageProvider"/>
	  <page
         class="org.apache.directory.ldapstudio.browser.ui.dialogs.properties.AttributePropertyPage"
